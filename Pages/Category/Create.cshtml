@page
@inject Examensarbete.Data.ApplicationDbContext _context
@using System.Collections
@using Examensarbete.Models
@model Examensarbete.Pages.Category.CreateModel

@{
    ViewData["Title"] = "Create";
    ViewData["IsAdminSection"] = true;

}

<div class="mt-3 mb-3">
    <h2>Skapa Kategori</h2>
</div>
<hr />
<form method="post">


    <div class="form-group">
        <label for="NewCategory.Name">Namn:</label>
        <input type="text" asp-for="NewCategory.Name" placeholder="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="NewCategory.ParentId">Välj underkategori:</label>
        <select asp-for="NewCategory.ParentId" class="form-control" asp-items="@(new SelectList(Model.CategoriesList, "Id", "Name"))">
            <option value="">Välj en underkategori</option>
        </select>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="isMainCategory" asp-for="IsMainCategory" />
        <label class="form-check-label" for="isMainCategory">
            Skapa som ny huvudkategori
        </label>
    </div>
    <div>
        <input type="submit" value="Skapa" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}