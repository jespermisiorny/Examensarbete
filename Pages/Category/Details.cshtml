@page
@model Examensarbete.Pages.Category.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["IsAdminSection"] = true;

}

<div class="mt-3 mb-3">
    <h2>Detaljerad översikt av Kategori</h2>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>

<div class="d-flex align-items-center">
    <a class="btn btn-primary me-2" asp-page="./Edit" asp-route-id="@Model.Category.Id">Ändra</a>
    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Category.Id" onsubmit="return confirm('Är du säker på att du vill ta bort denna kategori?')">
        <button class="btn btn-danger" type="submit">
            Ta bort
        </button>
    </form>
</div>
<div class="mt-3">
    <a asp-page="./Index">Back to List</a>
</div>
