@page
@model Examensarbete.Pages.Filter.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["IsAdminSection"] = true;

}

<div class="mt-3 mb-3">
    <h2>Filter</h2>
</div>

<a class="btn btn-primary" asp-page="Create">Skapa nytt filter</a>

<div class="row">
    <div class="col-md-12">
        <div class="card-body">
            <table id="filterDataTable" class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Namn</th>
                        <th>Åtgärd</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Filter)
                    {
                        <tr>
                            <td class="text-center">@item.Id</td>
                            <td class="text-center">@item.Text</td>
                            <td class="text-center"><a href="@Url.Page("./Details", new { id = item.Id })">Info</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




@section Scripts {

    <link href="https://cdn.datatables.net/v/bs5/dt-2.0.2/b-3.0.1/date-1.5.2/r-3.0.0/sl-2.0.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-2.0.2/b-3.0.1/date-1.5.2/r-3.0.0/sl-2.0.0/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#filterDataTable').DataTable({
                "language": {
                    url: '//cdn.datatables.net/plug-ins/2.0.3/i18n/sv-SE.json'
                },
                "pageLength": 20
            });
        });
    </script>
}