@page
@model Examensarbete.Pages.Product.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["IsAdminSection"] = true;

}

<div class="mt-3 mb-3">
    <h2>Ändra Produkt</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group mb-2">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Product.ArticleNumber" class="control-label"></label>
                <input asp-for="Product.ArticleNumber" class="form-control" />
                <span asp-validation-for="Product.ArticleNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Product.PricePerUnit" class="control-label"></label>
                <input asp-for="Product.PricePerUnit" class="form-control" />
                <span asp-validation-for="Product.PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Product.WeightPerUnit" class="control-label"></label>
                <input asp-for="Product.WeightPerUnit" class="form-control" />
                <span asp-validation-for="Product.WeightPerUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Product.PackagingMaterial" class="control-label"></label>
                <input asp-for="Product.PackagingMaterial" class="form-control" />
                <span asp-validation-for="Product.PackagingMaterial" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Product.RecyclingRateAtEoL" class="control-label"></label>
                <input asp-for="Product.RecyclingRateAtEoL" class="form-control" />
                <span asp-validation-for="Product.RecyclingRateAtEoL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
